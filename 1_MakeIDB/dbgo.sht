#!/bin/sh

# Make image database 'idb' from 'myxml' file...
# Makes everything.
#
# > makeidb myxml -d=idb -p=_Nex.mrc
#
# Required -p= pattern describes the context around
# the tile ID 'N' part of image names.
#
# Options:
# -simple interpret input as Rick file
# -zmin=i -zmax=j restricts layer range
# -nf no foldmasks
# -lens=AffineLensFile.txt
# -k=MyClicksfile.txt
# -xmltype=0
# -xmlmin=0
# -xmlmax=0
#

export MRC_TRIM=12

makeidb Z7-119.txt -d=idb0 -simple -nf -p=_idN -zmin=7 -zmax=119


