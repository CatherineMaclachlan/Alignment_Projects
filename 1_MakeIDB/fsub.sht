#!/bin/sh

# Purpose:
# For layer range, convert mrc images and/or auto-generate foldmasks.
#
# > ./fsub.sht <zmin> [zmax]


export MRC_TRIM=12

nproc=4
nslot=4

if (($# == 1))
then
	last=$1
else
	last=$2
fi

for lyr in $(seq $1 $last)
do
	echo $lyr
	if [ -d "$lyr" ]
	then
		cd $lyr
		qsub -N makefm-$lyr -cwd -o /dev/null -V -b y -pe batch $nslot make -f make.fm -j $nproc EXTRA='""'
		cd ..
	fi
done

