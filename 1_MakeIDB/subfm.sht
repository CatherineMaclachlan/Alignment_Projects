#!/bin/sh

# Purpose:
# For layer range, generate foldmasks for images.
#
# > ./subfm.sht <zmin> [zmax]


export MRC_TRIM=12

nthr=4

if (($# == 1))
then
	last=$1
else
	last=$2
fi

for lyr in $(seq $1 $last)
do
	echo $lyr
	if [ -d "$lyr" ]
	then
		cd $lyr
		qsub -N makefm-$lyr -cwd -V -b y -pe batch $nthr make -f make.fm -j $nthr EXTRA='""'
		cd ..
	fi
done

