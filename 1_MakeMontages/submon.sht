#!/bin/sh

# Purpose:
# For each layer in range, gather points, cd to layer's montage dir,
# run lsq there.
#
# > ./submon.sht <zmin> [zmax]


if (($# == 1))
then
	last=$1
else
	last=$2
fi

for lyr in $(seq $1 $last)
do
	echo $lyr
	if [ -d "$lyr" ]
	then
		cd $lyr/montage

		qsub -N mon-$lyr -cwd -V -b y -pe batch 1 "./runlsq.sht"

		cd ../..
	fi
done

