#!/bin/sh

# Purpose:
# Clean all down data for layer $1.
#
# > ./cleandown1.sht <z>


if (($# == 0))
then
	echo "Need layer number"
	exit
fi

cd $1

b=$(($1 - 1))

for jb in $(ls -d * | grep -E 'D[0-9]{1,}_[0-9]{1,}')
do
	echo $jb
	cd $jb
	rm -f p*
	rm -f q*
	hdr=$(printf "Atl\tBtl\tAcr\tBcr\tErr\tDeg\tR\tT0\tT1\tX\tT3\tT4\tY\n")
	echo "$hdr" > "ThmPair_"$1"_@_"$b".txt"
	cd ..
done

cd ..

